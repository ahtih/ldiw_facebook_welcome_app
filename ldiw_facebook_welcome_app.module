			'video_play_liked','liked_after_video') as $func) {
		$menu_data["ldiw_facebook_welcome_app/" . $func . ".fbml"]=array(
					'page callback' =>
							"ldiw_facebook_welcome_app_log_event_and_exit",
					'page arguments' => array($func),
					'access callback' => TRUE,
					'type' => MENU_CALLBACK,
					);
		}

	return $menu_data;
	}
